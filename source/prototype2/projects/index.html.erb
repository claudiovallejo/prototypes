---
layout: main2
title: Projects
---
<% categories = [] %>
<% data.projects.each do |project| %>
  <% if !categories.include? project.category %>
    <% categories.push(project.category) %>
  <% end %>
<% end %>
<%# Project Filter %>
<div class="mw8 center">
  <nav class="mt11">
    <p class="ma0 ph4 ph9-m ph0-l roboto fw4 f6 tracked-mega ttu silver">Categories</p>
    <ul id="filters" class="list ma0 pa4 ph9-m ph0-l overflow-x-auto overflow-scrolling scrollbar-dn nowrap center">
      <li class="dib"><%= link_to "All", "/", :class => "filter link roboto mr4 dark-gray hover-dark-gray" %></li>
      <% categories.each do |category| %>
        <li class="dib"><%= link_to category, "/", :class => "filter link roboto mr4 silver hover-dark-gray" %></li>
      <% end %>
    </ul>
  </nav>
  <%# Featured Projects %>
  <% length = data.projects.length %>
  <% data.projects.each_with_index do |project, r| %>
    <% if r === 1 || r === 2 %>
      <% if r === 1 %>
        <div class="cf">
      <% end %>
          <div class="fl-ns w-50-ns mb1 mb15-ns <% if r ===1 %>pr075-ns<% else %>pl075-ns<% end %>">
            <div class="aspect-ratio aspect-ratio--6x4 aspect-ratio--1x1-ns">
              <a class="db aspect-ratio--object cover dim no-underline" title="<%= project.card.six_four.alt %>" href="/prototype2/projects/equipage" style="background:url(../images/<%= project.card.six_four.path %>) no-repeat center;">
                <div class="absolute z-5 pa4 pa9-m">
                  <h2 class="mt0 mb12 roboto fw4 f4 white lh-title"><%= project.name %></h2>
                  <h4 class="ma0 roboto fw4 f6 tracked-mega ttu white"><%= project.category %></h4>
                </div>
                <div class="absolute w-100 h-100 bg-black-60"></div>
              </a>
            </div>
          </div>
      <% if r === 2 %>
        </div>
      <% end %>
    <% else %>
      <div class="aspect-ratio aspect-ratio--6x4 mb1 mb15-ns">
        <a class="relative db aspect-ratio--object cover dim no-underline" title="<%= project.card.six_four.alt %>" href="/prototype2/projects/equipage" style="background:url(../images/projects/<%= purl project.name %>-card-6x4.jpg) no-repeat center;">
          <div class="absolute z-5 pa4 pa9-m">
            <h2 class="mt0 mb12 roboto fw4 f4 white lh-title"><%= project.name %></h2>
            <h4 class="ma0 roboto fw4 f6 tracked-mega ttu white"><%= project.category %></h4>
          </div>
          <div class="absolute w-100 h-100 bg-black-60"></div>
        </a>
      </div>
    <% end %>
  <% end %>
</div>
