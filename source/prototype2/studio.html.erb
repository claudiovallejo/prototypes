---
layout: main2
title: Studio
---
<div class="mw8 center">
  <%# Caption %>
  <div class="ph4 ph0-l mv5 mv6-ns">
    <h1 class="noto-sans fw4 f3 f2-ns lh-title mw6"><%= data.studio.caption %></h1>
  </div>
  <%# Studio Images: First Section %>
  <% halves1 = false %>
  <% data.studio.images.details.each_with_index do |image, i| %>
    <% if i < 3 %>
      <% if image.type == "full" %>
        <div class="aspect-ratio aspect-ratio--16x9 <% if i === 2 %>mb0<% else %>mb1 mb4-l<% end %>">
          <%= image_tag image.path, :alt => image.alt, :class => "aspect-ratio--object" %>
        </div>
      <% elsif image.type == "half" && !halves1 %>
        <% halves1 = true %>
        <div class="cf">
          <div class="fl-ns w-50-ns pr15-m pr3-l">
            <div class="aspect-ratio aspect-ratio--16x9 aspect-ratio--1x1-ns <% if i === 2 %>mb0<% else %>mb1 mb4-l<% end %>">
              <%= image_tag image.path, :alt => image.alt, :class => "aspect-ratio--object" %>
            </div>
          </div>
      <% elsif image.type == "half" && halves1 %>
        <% halves1 = false %>
          <div class="fl-ns w-50-ns pl15-m pl3-l">
            <div class="aspect-ratio aspect-ratio--16x9 aspect-ratio--1x1-ns <% if i === 2 %>mb0<% else %>mb1 mb4-l<% end %>">
              <%= image_tag image.path, :alt => image.alt, :class => "aspect-ratio--object" %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
  <%# Studio Details %>
  <div class="center pv6 ph4 ph0-ns w-50-ns">
    <% l = data.studio.details.length %>
    <% data.studio.details.each_with_index do |detail, d| %>
      <p class="noto-sans fw4 f5 lh-copy <% if d != l - 1 %>mb5<% end %>"><%= detail %></p>
    <% end %>
  </div>
  <%# Studio Images: Second Section %>
  <% halves2 = false %>
  <% data.studio.images.details.each_with_index do |image, i| %>
    <% if i > 0 %>
      <% if image.type == "full" %>
        <div class="aspect-ratio aspect-ratio--16x9 <% if i === 3 %>mb0<% else %>mb1 mb4-l<% end %>">
          <%= image_tag image.path, :alt => image.alt, :class => "aspect-ratio--object" %>
        </div>
      <% elsif image.type == "half" && !halves2 %>
        <% halves2 = true %>
        <div class="cf">
          <div class="fl-ns w-50-ns pr15-m pr3-l">
            <div class="aspect-ratio aspect-ratio--16x9 aspect-ratio--1x1-ns <% if i === 3 %>mb0<% else %>mb1 mb4-l<% end %>">
              <%= image_tag image.path, :alt => image.alt, :class => "aspect-ratio--object" %>
            </div>
          </div>
      <% elsif image.type == "half" && halves2 %>
        <% halves2 = false %>
          <div class="fl-ns w-50-ns pl15-m pl3-l">
            <div class="aspect-ratio aspect-ratio--16x9 aspect-ratio--1x1-ns <% if i === 3 %>mb0<% else %>mb1 mb4-l<% end %>">
              <%= image_tag image.path, :alt => image.alt, :class => "aspect-ratio--object" %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
  <%# Studio Conclusion %>
  <div class="center pv6 ph4 ph0-ns w-50-ns">
    <p class="noto-sans fw4 f5 lh-copy"><%= data.studio.conclusion %></p>
  </div>
  <%# Separator %>
  <div class="mw8 center ph4 ph0-l">
    <div class="w-100 bb b--near-white"></div>
  </div>
  <%# Studio Banner %>
  <%= partial "partials/p2/banner_contact" %>
  <%# Separator %>
  <div class="mw8 center ph4 ph0-l">
    <div class="w-100 bb b--near-white"></div>
  </div>
</div>
