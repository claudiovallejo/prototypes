<% contact = data.contact %>
<div class="cf mw8 center ph4 ph0-l pv5">
  <div class="fl-ns w-100-ns">
    <%= link_to "Filipao Nunes", "/prototype2", :class => "db mb4 roboto fw9 f6 ttu tracked-mega dark-gray dim no-underline" %>
  </div>
  <%# First Column: Studio Address + Hours %>
  <div class="fl-ns w-50-ns">
    <a class="db mb4 dark-gray dim no-underline" href="/">
      <p class="ma0 noto-sans fw4 f5 mb2"><%= contact.address.street %></p>
      <p class="ma0 noto-sans fw4 f5 mb2"><%= contact.address.city %>, <%= contact.address.state %></p>
      <p class="ma0 noto-sans fw4 f5"><%= contact.address.country %> <%= contact.address.zip_code %></p>
    </a>
    <div class="mb4 mb0-ns">
      <p class="ma0 noto-sans fw4 f5 mb2 silver">Weekdays <%= contact.hours.weekdays %></p>
      <p class="ma0 noto-sans fw4 f5 mb2 silver">Saturdays <%= contact.hours.saturdays %></p>
    </div>
    <%# Small Mobile Separator %>
    <div class="dn-ns w2 bb b--light-gray mb4"></div>
  </div>
  <%# Second Column: Contact %>
  <div class="fl-ns w-25-ns">
    <a class="db mb4 noto-sans fw4 f5 dark-gray dim no-underline" href="tel:<%= pnum contact.number %>"><%= contact.number %></a>
    <a class="db mb4 noto-sans fw4 f5 dark-gray dim no-underline" href="mailto:<%= contact.email %>"><%= contact.email %></a>
    <%# Small Mobile Separator %>
    <div class="dn-ns w2 bb b--light-gray mb4"></div>
  </div>
  <%# Third Column: Social Media %>
  <div class="fl-ns w-25-ns">
    <a class="db mb4 noto-sans fw4 f5 dark-gray dim no-underline" href="<%= contact.social_media.instagram.path %>"><%= contact.social_media.instagram.name %></a>
    <a class="db noto-sans fw4 f5 dark-gray dim no-underline" href="<%= contact.social_media.twitter.path %>"><%= contact.social_media.twitter.name %></a>
  </div>
</div>
