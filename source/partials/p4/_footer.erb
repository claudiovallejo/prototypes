<% contact= data.contact %>
<div class="mw8 center ph4 ph8-m ph0-l">
  <div class="cf mb5">
    <%# First Column: Logo %>
    <div class="fl-ns w-33-ns mb5 mb0-ns">
      <%= image_tag "icon.svg", :alt => "Filipao Nunes icon." %>
    </div>
    <%# Second Column: Location Details %>
    <div class="fl-ns w-33-ns">
      <% link_to "/", :class => "db mb4 roboto dark-gray dim no-underline" do %>
        <p class="ma0 roboto fw4 f5 mb2"><%= contact.address.street %></p>
        <p class="ma0 roboto fw4 f5 mb2"><%= contact.address.city %>, <%= contact.address.state %></p>
        <p class="ma0 roboto fw4 f5 mb2"><%= contact.address.country %> <%= contact.address.zip_code %></p>
      <% end %>
      <div class="mb5 mb0-ns">
        <p class="ma0 roboto fw4 f5 mb2 silver">Weekdays <%= contact.hours.weekdays %></p>
        <p class="ma0 roboto fw4 f5 mb2 silver">Saturdays <%= contact.hours.saturdays %></p>
      </div>
    </div>
    <%# Third Column: Contact Details %>
    <div class="fl-ns w-33-ns">
      <a class="db mb3 roboto fw4 f5 dark-gray dim no-underline" href="tel:<%= pnum contact.number %>" target="_blank"><%= contact.number %></a>
      <a class="db mb5 mb4-ns roboto fw4 f5 dark-gray dim no-underline" href="mailto:<%= contact.email %>" target="_blank"><%= contact.email %></a>
    </div>
    <%# Fourth Column: Social Media Details %>
    <div class="fl-ns w-33-ns">
      <a class="db mb3 roboto fw4 f5 dark-gray dim no-underline" href="<%= contact.social_media.instagram.path %>" target="_blank"><%= contact.social_media.instagram.name %></a>
      <a class="db roboto fw4 f5 dark-gray dim no-underline" href="<%= contact.social_media.twitter.path %>" target="_blank"><%= contact.social_media.twitter.name %></a>
    </div>
  </div>
</div>
