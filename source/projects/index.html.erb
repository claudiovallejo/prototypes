---
layout: main1
---
<% categories = [] %>
<% data.projects.each do |project| %>
  <% if !categories.include? project.category %>
    <% categories.push(project.category) %>
  <% end %>
<% end %>
<div class="mw8 center">
  <nav class="mt6 mb4">
    <ul id="filters" class="list ma0 ph4 overflow-x-scroll overflow-y-hidden overflow-scrolling nowrap center pv4">
      <li class="dib"><%= link_to "All", "/", :class => "filter link noto-sans mr4 dark-gray hover-dark-gray" %></li>
      <% categories.each do |category| %>
        <li class="dib"><%= link_to category, "/", :class => "filter link noto-sans mr4 moon-gray hover-dark-gray" %></li>
      <% end %>
    </ul>
  </nav>
  <div class="ph3 pb1">
    <div class="cf">
      <% data.projects.each_with_index do |project, r| %>
        <div class="fl w-100 w-50-ns w-33-l ph2 mb3" data-type="<%= project.category %>">
          <a class="db flex items-end h5 link bg-near-white pa4" href="/projects/<%= purl project.name %>">
            <div>
              <h4 class="mt0 mb2 noto-sans fw4 f6 light-silver"><%= project.category %></h4>
              <h2 class="ma0 noto-sans fw4 f4 dark-gray lh-title"><%= project.name %></h2>
            </div>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
