---
layout: main3
title: Projects
---
<% categories = [] %>
<% data.projects.each do |project| %>
  <% if !categories.include? project.category %>
    <% categories.push(project.category) %>
  <% end %>
<% end %>
<%# Project Filter %>
<div class="mw8 center ph4 ph9-m ph0-l">
  <nav class="mt11">
    <p class="ma0 roboto fw4 f6 tracked-mega ttu silver">Categories</p>
    <ul id="filters" class="list ma0 pa4 ph9-m ph0-l overflow-x-auto overflow-scrolling scrollbar-dn nowrap center">
      <li class="dib"><%= link_to "All", "/", :class => "filter link roboto mr4 dark-gray hover-dark-gray" %></li>
      <% categories.each do |category| %>
        <li class="dib"><%= link_to category, "/", :class => "filter link roboto mr4 silver hover-dark-gray" %></li>
      <% end %>
    </ul>
  </nav>
  <%# Featured Projects %>
  <% l = data.projects.length %>
  <% data.projects.each_with_index do |project, r| %>
    <% card = project.card %>
    <% if r === 0 || r === 3 %>
      <a class="db dim no-underline mb8" href="/prototype3/projects/equipage">
        <div class="aspect-ratio aspect-ratio--6x4">
          <%= image_tag "../images/#{ card.six_four.path }", :class => "aspect-ratio--object", :alt => card.six_four.alt %>
        </div>
        <p class="mt2 mb0 roboto fw3 lh-title dark-gray">
          <%= project.name %><% if r % 2 == 0 %>  \  <% else %>  /  <% end %><span class="silver"><%= project.category %></span>
        </p>
      </a>
    <% else %>
      <div class="cf">
        <a class="db <% if card.four_six.align === "right" %>fr<% else %>fl<% end %> w-two-thirds dim no-underline <% if r != l - 1 %>mb8<% else %>mb10<% end %>" href="/prototype3/projects/equipage">
          <div class="aspect-ratio aspect-ratio--4x6">
            <%= image_tag "../images/#{ card.four_six.path }", :class => "aspect-ratio--object", :alt => card.six_four.alt %>
          </div>
          <p class="mt2 mb0 roboto fw3 lh-title dark-gray">
            <%= project.name %><% if r % 2 == 0 %>  \  <% else %>  /  <% end %><span class="silver"><%= project.category %></span>
          </p>
        </a>
      </div>
    <% end %>
  <% end %>
</div>
