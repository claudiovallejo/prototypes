---
layout: main3
title: Studio
---
<% studio = data.studio %>
<div class="mw8 center ph4 ph9-m ph0-l">
  <%# Caption %>
  <div class="cf mt8 mb8">
    <h1 class="w-two-thirds-m w-50-l ma0 roboto fw4 f3 f8-ns lh-title"><%= studio.caption %></h1>
  </div>
  <%# Details %>
  <div class="cf mb8">
    <% studio.detail.each_with_index do |detail, d| %>
      <div class="fl-ns w-50-ns <% if d === 0 %>pr075-ns<% else %>pl075-ns<% end %>">
        <p class="roboto fw3 f5 dark-gray lh-copy"><%= detail %></p>
      </div>
    <% end %>
  </div>
  <%# Studio Images %>
  <% l = studio.images.length %>
  <% studio.images.each_with_index do |image, i| %>
    <% if i === 0 %>
      <div class="mb8">
        <div class="aspect-ratio aspect-ratio--6x4">
          <%= image_tag "../images/#{ image.six_four.path }", :class => "aspect-ratio--object", :alt => image.six_four.alt %>
        </div>
        <% if image.six_four.caption != false %>
          <p class="mt1 mb0 roboto fw3 f6 lh-title silver"><%= image.six_four.caption %></p>
        <% end %>
      </div>
    <% elsif i === 2 %>
      <div class="mb8">
        <div class="aspect-ratio aspect-ratio--6x4">
          <%= image_tag "../images/#{ image.six_four.path }", :class => "aspect-ratio--object", :alt => image.six_four.alt %>
        </div>
        <% if image.six_four.caption != false %>
          <p class="mt1 mb0 roboto fw3 f6 lh-title silver"><%= image.six_four.caption %></p>
        <% end %>
      </div>
    <% else  %>
      <div class="cf mb8">
        <div class="w-two-thirds <% if image.four_six.align === "right" %>fr<% else %>fl<% end %> w-two-thirds">
          <div class="aspect-ratio aspect-ratio--4x6">
            <%= image_tag "../images/#{ image.four_six.path }", :class => "aspect-ratio--object", :alt => image.four_six.alt %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <%# Conclusion %>
  <div class="cf mb8">
    <div class="fl-ns w-third-ns"><p></p></div>
    <div class="fl-ns w-two-thirds-ns">
      <p class="mb15 roboto fw3 f5 dark-gray lh-copy"><%= studio.conclusion %></p>
      <a class="dib roboto fw4 f5 silver" href="/contact"><%= studio.link.title %></a>
    </div>
  </div>
</div>
