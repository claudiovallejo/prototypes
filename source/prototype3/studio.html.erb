---
layout: main3
title: Studio
---
<% studio = data.studio3 %>
<div class="mw8 center ph4 ph8-m ph0-l">
  <%# Caption %>
  <div class="mv8 mv6-ns ph0-l tc">
    <h1 class="mw6 center ma0 roboto fw4 f3 f2-ns lh-title"><%= studio.caption %></h1>
  </div>
  <%# Hero %>
  <div class="aspect-ratio aspect-ratio--<%= studio.images.hero.aspect_ratio %>">
    <div class="aspect-ratio--object bg-near-white"></div>
  </div>
  <%# Studio Details %>
  <div class="mw6 mv8 center tc">
    <% dl = studio.details.length %>
    <% studio.details.each do |detail, d| %>
      <% if detail.type === "text" %>
        <p class="roboto fw4 f5 dark-gray lh-copy <% if d != dl - 1 %>mb5<% end %>"><%= detail.content %></p>
      <% else %>
        <ul class="list pa0 <% if d != dl - 1 %>mb5<% end %>">
          <% l = detail.content.length %>
          <% detail.content.each do |bullet, b| %>
          <li class="roboto fw3 f5 dark-gray <% if b != l - 1 %>mb3<% end %>"><p><%= bullet %></p></li>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  </div>
  <%# Studio Gallery %>
  <% sl = studio.images.detail.length %>
  <% studio.images.detail.each do |image, i| %>
    <% aspect_ratio = image.aspect_ratio %>
    <% align = image.align %>
    <% if aspect_ratio === "1x1" || aspect_ratio === "6x4" %>
      <div class="<% if i != sl - 1 %>mb8<% end %>">
        <div class="aspect-ratio aspect-ratio--<%= aspect_ratio %>">
          <div class="aspect-ratio--object bg-near-white"></div>
        </div>
      </div>
    <% else %>
      <div class="cf">
        <div class="<% if align === "right" %>fr<% else %>fl<% end %> w-two-thirds <% if i != sl - 1 %>mb8<% end %>">
          <div class="aspect-ratio aspect-ratio--<%= aspect_ratio %>">
            <div class="aspect-ratio--object bg-near-white"></div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
