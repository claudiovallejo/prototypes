---
layout: main1
title: Studio
---
<% studio = data.studio %>
<div class="mw8 center">
  <%# Caption %>
  <div class="ph4 mt6 mb6">
    <h1 class="noto-sans fw4 f3 lh-title"><%= studio.caption %></h1>
  </div>
  <%# Hero %>
  <div class="ph4-l">
    <%= image_tag studio.images.hero.path, :alt => studio.images.hero.alt %>
  </div>
  <%# Studio Details %>
  <div class="ph4 pv5 center w-75-m w-50-l ">
    <% studio.details.each_with_index do |detail, d| %>
      <p class="noto-sans fw4 f4 lh-copy <% if d != studio.details.length %>mb5<% end %>"><%= detail %></p>
    <% end %>
  </div>
  <%# Detail Images %>
  <% studio.images.details.each_with_index do |detail, d| %>
    <% if d == 0 || d == studio.images.details.length - 1 %>
      <%= image_tag detail.path, :alt => detail.alt %>
    <% else d != studio.images.details.length - 1 %>
      <% if d == 1 %>
        <div class="cf-ns">
          <div class="fl-ns w-50-ns pr15-ns">
            <%= image_tag detail.path, :alt => detail.alt %>
          </div>
      <% else %>
          <div class="fl-ns w-50-ns pl15-ns">
            <%= image_tag detail.path, :alt => detail.alt %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
  <%# Conclusion %>
  <div class="ph4 pt5 center w-75-m w-50-l">
    <p class="noto-sans f4 lh-copy mb5"><%= studio.conclusion %></p>
  </div>
  <%# Contact %>
  <div class="ph4 pb6 center w-75-m w-50-l">
    <%= link_to "View Contact Details", "/contact",:class => "noto-sans link f4 moon-gray" %>
  </div>
</div>
