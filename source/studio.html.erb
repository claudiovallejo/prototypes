---
layout: main1
---
<% studio = data.studio %>
<div class="mw8 center">
  <div class="ph4 mt7 mb6">
    <h1 class="noto-sans fw4 f3 lh-title"><%= studio.caption %></h1>
  </div>
  <%# Hero %>
  <%= image_tag studio.images.hero.path, :alt => studio.images.hero.alt %>
  <%# Studio Details %>
  <div class="ph3 pv5">
    <% studio.details.each_with_index do |detail, d| %>
      <p class="noto-sans f4 lh-copy <% if d != studio.details.length %>mb5<% end %>"><%= detail %></p>
    <% end %>
  </div>
  <%# Detail Images %>
  <% studio.images.details.each_with_index do |detail, d| %>
    <%= image_tag detail.path, :alt => detail.alt %>
  <% end %>
  <%# Conclusion %>
  <div class="ph3 pt5 pb3">
    <p class="noto-sans f4 lh-copy mb5"><%= studio.conclusion %></p>
  </div>
  <%# Contact %>
  <div class="ph3 pb6">
    <%= link_to "View Contact Details", "/contact",:class => "noto-sans link f4 moon-gray" %>
  </div>
</div>
